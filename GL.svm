extern Init(a);
extern FrameStart(a);
extern FrameEnd(a);
extern Draw(a);
extern GetInput(a);


def main(){

	var end : 0;
	var xKey : 120;
	var frame : 0;

	var dump : Init(0);

	while(end = 0){
		dump : FrameStart(0);

		PRINT(frame);

		var x : 50 + frame;
		while(x > 500){
			x : x - 500;
		}

		var col : x / itof(500);

		dump : Draw(col);

		end : GetInput(xKey);

		dump : FrameEnd(0);
		frame : frame + 1;
	}

	return 0;
}